<link rel="stylesheet" href="public/css/header-home.css">
<section class="start">
    <div class="mask">
        <header>
            <div class="container-default">
                <div class="row pt-4 wrap-logo-menu">
                    <div class="col wrap-logo" data-aos="fade-right" data-aos-duration="1000">
                        <a href="/"><img src="public/img/Logo AA Digital Design.png" alt="Logo_AA_Digital_Design"></a>
                    </div>
                    <div class="col wrap-menu" data-aos="fade-left" data-aos-duration="1000">
                        {{!-- Menu desktop --}}
                        <nav class="nav float-end menu-desktop">
                            <a class="nav-link text-white nav-header-home" aria-current="page" href="/">Home</a>
                            <a class="nav-link text-white nav-header-home" href="#services">Serviços</a>
                            <a class="nav-link text-white nav-header-home" href="/portifolio">Portifólio</a>
                            <a class="nav-link text-white nav-header-home" href="/contato">Contato</a>
                        </nav>
                        {{!-- Menu Mobile --}}
                        <div class="button-menu-mobile" onclick="showMenu()">
                            <svg class="bi icon">
                                <use id="iconMenu" xlink:href="node_modules/bootstrap-icons/bootstrap-icons.svg#list" />
                            </svg>
                        </div>
                        <nav class="menu-mobile" id="menuMobile">
                            <ul>
                                <a href="/"><li>Home</li></a>
                                <a href="#services"><li>Serviços</li></a>
                                <a href="/portifolio"><li>Portifólio</li></a>
                                <a href="/contato"><li>Contato</li></a>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <div class="content">
            <div class="container-default">
                <div class="content-text" id="mainText">
                    <h1 data-aos="fade-right" data-aos-duration="1000">O Lugar certo para desenvolver a sua identidade
                        no mundo digital.</h1>
                    <button class="btn btn-custom btn-lg" data-aos="fade-right" data-aos-duration="1000">Fale Agora
                        Conosco</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    const menuMobile = document.getElementById("menuMobile");
    const mainText = document.getElementById("mainText");
    const iconMenu = document.getElementById("iconMenu");
    let controlStatus = false;
    function showMenu() {
        if (controlStatus == false) {
            menuMobile.style.display = 'block'
            mainText.style.marginTop = '45px'
            iconMenu.href.baseVal  = "node_modules/bootstrap-icons/bootstrap-icons.svg#x"
            controlStatus = true;
        } else {
            menuMobile.style.display = 'none'
            mainText.style.marginTop = '0px'
            iconMenu.href.baseVal  = "node_modules/bootstrap-icons/bootstrap-icons.svg#list"
            controlStatus = false
        }
    }
</script>